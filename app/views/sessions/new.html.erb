<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Complaint Game</h1>
  </div>
  <% if flash[:message] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:message] %>
  </div>
  <% end %>
</div>

<div class="container">
  <%= form_tag '/login', method: 'post' do  %>
  <div class="form-group">
    <%=label_tag :email %>
    <%= text_field_tag :email,nil, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%=label_tag :password %>
    <%= password_field_tag :password,nil, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <p><%= link_to "Don't have an account?", new_user_path %></p>
    <%= submit_tag "Login", class: 'btn btn-outline-info btn-lg btn-submit' %>
    <%end%>
  </div>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Complaint Game</h1>
  </div>
</div>

<div class="container">
  <%= form_tag '/login', method: 'post' do  %>
  <div class="form-group">
    <%=label_tag :email %>
    <%= text_field_tag :email,nil, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%=label_tag :password %>
    <%= password_field_tag :password,nil, class: 'form-control'  %>
  </div>
  <% if flash[:message] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:message] %>
    </div>
  <% end %>
  <div class="form-inline">
    <div class="form-group mx-sm-3 mb-2">
      <%= submit_tag "Login", class: 'btn btn-outline-info btn-lg btn-submit' %>
      <%end%>
    </div>  
  <div class="form-group mx-sm-3 mb-2">  
    <% if flash[:message] %>
        <%= button_to "Signup", signup_path, method: :get, class: 'btn btn-outline-info btn-lg btn-submit' %>
    <% end %>  
  </div>  
</div>






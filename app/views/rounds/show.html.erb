<div class="section-title">
    <div class="d-flex justify-content-center">
        <h1 class="text-xl-center">Topic: <%=@round.topic.name%></h1>
    </div>
</div>


<% if @complaint.id == nil %>
<div class="form-box">
    <div class="form-group">
        <%=form_for @complaint do |f| %>
        <%=f.label :complain_text, "Have yourself a little cry...", class: "d-flex justify-content-center h2" %>
        <%=f.text_field :complain_text, class: 'form-control' %>
        <%=f.submit :submit, class: "btn btn-dark" %>
        <% end %>
    </div>
</div>
<% else %>
<div>
    <% if @round.complaint_phase? %>
    <div class="form-box">
        <h1>
            Your Complaint: <%=@complaint.complain_text%>
        </h1>
        <%=button_to "refresh", @round, method: :get %>
    </div>
    <% else %>
    <div class="form-box">
        <h1>
            Your Complaint: <%=@complaint.complain_text%>
        </h1>
        <%= button_to "Guess Phase", round_guesses_path(@round.id), method: :get %>
    </div>
    <% end %>
</div>
<% end %>
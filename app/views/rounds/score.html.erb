<h2>Scoring Time</h2>

<%  @round.game.users.each do |u|%>
<p><%= "#{u.name}: #{@round.score_for_round(u)}" %></p>
<% end %>



<% if @game.finished? %>
<h1>IMPLEMENT FINISH GAME BUTTON</h1>
<% else %>
<%=button_to "Start round #{@current_round + 1}", rounds_path, method: :post, round_id: @round.id, params: {game_id: @game.id} %>
<% end %>